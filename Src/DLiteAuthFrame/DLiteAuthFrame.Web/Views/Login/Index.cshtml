<body class="templatemo-bg-gray">
    <div class="container center-vertical">
        <div class="row ">
            <div class="col-md-offset-3 col-md-6" >
                <form class="form-horizontal">
                    <span class="heading">用户登录</span>
                    <div class="form-group">
                        <input type="text" maxlength="50" class="form-control"   id="txtName" placeholder="账号">
                        <i class="glyphicon glyphicon-user"></i>
                    </div>
                    <div class="form-group">
                        <input type="password"  maxlength="50" class="form-control"  id="txtPassWord" placeholder="密码">
                        <i class="glyphicon glyphicon-lock"></i>                        
                    </div>
                    <div class="form-group"> 
                        <button type="submit"  class="btn btn-info"  id="btnLogin">立刻登录</button>                       
                    </div>
                    <div id="result">
                       AAAAAAAAAAAAAAAAAA
                    </div>                     
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript">  
        $(document).ready(function () {
            $("#btnLogin").click(function () {
                $.ajax({
                    url:"Login/Login",
                    type:"POST",
                    dataType:"JSON",
                    data:{Name:$("#txtName").val(), PassWord:$("#txtPassWord").val()},
                    success: function (data) {
                        if (data.state == "success") {
                            $("#result").text("登录成功，正在跳转...");
                            window.setTimeout(function () {
                                window.location.href = "/Home/Index";
                            }, 100);
                        } else {
                            $("#result").text(data.message);
                        }
                    }
                });
            });
        });
