@using DLiteAuthFrame.APP.ViewModel;

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_From.cshtml";
    var OrgData = ViewData["OrgViewModel"] as OrgViewModel;
}


<script>      
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }

        $.submitForm({
            url: "/SystemManage/OrgManage/UpdateOrg",
            param: $("#form1").formSerialize(),
            success: function () {                
                $.currentWindow().$("#OrgTree").trigger("reloadGrid");
            }
        })
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#">基本信息</a></li>
        </ul>

        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form" style="width:500px;">
                <tr>
                    <th class="formTitle">上级</th>
                    <td class="formValue">
                        @Html.DropDownList("OrgList", ViewData["OrgList"] as SelectList, new { @class = "form-control",@id="OrgCode",@name= "OrgCode" })
                    </td>
                </tr>
                <tr hidden="hidden">
                    <td>
                        <input id="OrgCde" name="OrgCde" hidden="hidden" class="form-control required" maxlength="100" placeholder="请输入" value="@OrgData.OrgCode" />
                    </td>
                </tr>
                <tr>                   
                    <th class="formTitle">名称</th>
                    <td class="formValue">                       
                        <input id="OrgName" name="OrgName" type="text" class="form-control required" maxlength="100" placeholder="请输入" value="@OrgData.OrgName" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">备注</th>
                    <td class="formValue">
                        <input id="OrgExplain" name="OrgExplain" type="text" class="form-control" maxlength="100" placeholder="请输入" value="@OrgData.OrgExplain" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
