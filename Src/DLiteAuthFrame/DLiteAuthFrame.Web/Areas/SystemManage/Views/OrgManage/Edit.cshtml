<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#">基本信息</a></li>        
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form" style="width:1000px;">
                <tr>
                    <th class="formTitle">上级</th>
                    <td class="formValue">
                        <select id="OrgCode" name="OrgCode" class="form-control required">
                            <option value="0">父节点</option>
                        </select>
                    </td>                    
                </tr>
                <tr>
                    <th class="formTitle">名称</th>
                    <td class="formValue">                                            
                        <input id="OrgName" name="OrgName" type="text" class="form-control required" maxlength="100" placeholder="请输入名称" value="@OrgData.OrgName" /> 
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">备注</th>
                    <td class="formValue" colspan="3">
                        <input id="OrgExplain" name="OrgExplain" type="text" class="form-control" maxlength="100" placeholder="请输入名称" value="@OrgData.OrgExplain" /> 
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
