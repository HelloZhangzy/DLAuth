@using DLiteAuthFrame.APP.ViewModel;

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_From.cshtml";
    var OrgData = ViewData["OrgViewModel"] as OrgViewModel;
}


<script>      
    @*$(function () {
        alert("aaa");
        LoadData();
    });

    function LoadData()
    {
        alert("aaa");       
        if (@ViewData["OrgViewModel"]) {
            $("#OrgName").text = (ViewData["OrgViewModel"] as DLiteAuthFrame.APP.ViewModel.OrgViewModel).OrgName;
        }       
    }*@

    $.ajax({
        url: "/SystemManage/OrgManage/GetOrgs",
        @*data: { ID: @OrgData.OrgCode},*@
        dataType: "json",
        async: false,
        success: function (data) {
            $("#form1").formSerialize(data);
        }
    });
